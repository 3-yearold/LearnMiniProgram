  width: 75%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-radius: 60rpx;
  padding: 0 10rpx;
  background-color: #f5f5f5;
}

.search-group>input {
  font-size: 25rpx;
  width: 75%;
}

.search-group>image {
  height: 32rpx;
  width: 32rpx;
  margin-left: 25rpx;
}