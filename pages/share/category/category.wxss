.custom-bar {
  /* background-color: #aaa; */
  /*   position: fixed; */
  left: 0;
  top: 0;
  width: 100%;
  background-color: #ffffff;
}

.custom-bar__wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
}

