.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #ffffff;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
}

.swiper-tab-item {
  display: inline-block;
  width: 33.33%;
  color: black;
}

.active {
  color: #5ba7fc;
  border-bottom: 4rpx solid#5ba7fc;
}

.article {
  width: 100%;
  height: 100%;
}

.article_box {
  padding: 20rpx 20rpx;
  background-color: #fff;
  margin-top: 30rpx;
  width: 85%;
  margin-left: 5%;
  box-shadow: 0rpx 0rpx 15rpx 5rpx #f2f2f2;
  border-radius: 10rpx;
  height: 37%;
}

.article_head {
  height: 13%;
}

.article_headphoto {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  float: left;
}

.article_user {
  float: left;
  font-size: 25rpx;
  margin-left: 20rpx;
  line-height: 50rpx;
}

.article_book {
  float: right;
  font-size: 20rpx;
  line-height: 50rpx;
  color: #b0b0b0;
  margin-right: 5rpx;
}

.article_body {
  height: 72%;
}

.article_text {
  font-size: 23rpx;
  float: left;
  width: 95%;
  margin-top: 20rpx;
  margin-left: 20rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.article_bookcap {
  height: 63%;
  float: left;
  /* border: 1px solid; */
  margin-top: 20rpx;
  width: 94%;
  padding: 0rpx;
  margin-left: 3%;
  border-radius: 10rpx;
  background-color: #f4f4f4;
  display: flex;
  align-items: center;
}

.article_bookphoto {
  float: left;
  width: 115rpx;
  height: 160rpx;
  /* margin-top: 20rpx; */
  margin-left: 20rpx;
}

.book_message {
  width: 67%;
  margin-left: 20rpx;
}

.book_title {
  font-size: 30rpx;
}

.book_writer {
  margin-top: 25rpx;
  font-size: 25rpx;
  color: #999999;
}

.article_bookgo {
  float: right;
  width: 20rpx;
  height: 30rpx;
}

.article_footer {
  height: 15%;
  display: flex;
  align-items: center;
  justify-content: center;
}



.article_love {
  width: 40rpx;
  height: 35rpx;
}

.article_comment {
  width: 37rpx;
  height: 35rpx;
}

.article_repeat {
  width: 37rpx;
  height: 35rpx;
}


.article_bookcap a {
  float: left;
  width: 65%;
  margin-top: 30rpx;
  margin-left: 25rpx;
  font-size: 30rpx;
}

