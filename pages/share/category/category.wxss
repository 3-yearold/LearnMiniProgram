/* pages/category/category.wxss */
page {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  align-items: center;
}

.search {
  display: flex;
  flex-direction: row;
  border: 1px solid #f5f5f5;
  border-radius: 15px;
  width: 90%;
  height: 25px;
  align-items: center;
  margin-top: 15px;
}

.search-group__input {
  width: 85%;
  margin-left: 15px;
  font-size: 25rpx;
  color: #cdcbc8;
}

.navbar {
  flex: none;
  display: flex;
  background: #cbcbcb;
  width: 100%;
  margin-top: 35rpx;
  border-radius: 10rpx;
  overflow: hidden
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  /*   color: #ffffff; */
}

.navbar .item.active {
  /*   background-color: #5ba7fc; */
  color: #5ba7fc;
}

