page {

  width: 100%;
  height: 100%;
}

.search_head{
  height: 7%;
    background-color: #fff;
    width: 100%;
    z-index: 100;
    position: fixed;
    border-top: 1rpx solid #efefef;
}

.search-group {
  width: 88%;
  display: flex;
  /* justify-content: flex-start; */
  align-items: center;
  border-radius: 60rpx;
  /* padding: 0 10rpx; */
  background-color: #f5f5f5;
  margin-left: 6%;
  margin-top: 30rpx;
  height: 75%;
}

.search-group>input {
  font-size: 25rpx;
  width: 75%;
}

.search-group>image {
  height: 32rpx;
  width: 32rpx;
  margin-left: 40rpx;
  margin-right: 20rpx;
}

.historysearch{
  padding: 30rpx 55rpx;
  float: left;
  height: 15%;
  margin-top: 15%;
}

.historybook{
  float: left;
  border-radius: 20px;
  margin-right: 40rpx;
  background-color: #f5f5f5;
  padding: 10rpx 30rpx;
  font-size: 25rpx;
  margin-top: 30rpx;
}

.good{
  padding: 40rpx 55rpx;
  float: left;
  width: 100%;
  height: 65%;
}

.hot_book_box{
  margin-top: 40rpx;
  width: 90%;
  float: left;
}

.book2{
  width: 130rpx;
  height: 190rpx;
  float: left;
}

.book_card text {
  float: left;
  width: 68%;
  margin-top: 20rpx;
  margin-left: 25rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.book_writer{
  font-size: 28rpx;
}

.book_body{
  font-size: 25rpx;
  color: #999999;
}